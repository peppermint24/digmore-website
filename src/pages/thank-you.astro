---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - Digmore">
  <main>
    <section class="bg-[rgb(29,29,29)] text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold text-center mb-4 uppercase tracking-tight">Thank You!</h1>
        <p class="text-xl text-center max-w-2xl mx-auto">Your message has been received. We'll get back to you shortly.</p>
      </div>
    </section>

    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-8">What's Next?</h2>
        <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
          Our team will review your inquiry and respond within 24-48 business hours. Meanwhile, you can explore our product catalog.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="/products"
            class="bg-primary text-black px-8 py-4 rounded-md font-semibold hover:bg-yellow-500 transition uppercase tracking-wide text-sm"
          >
            View Products
          </a>
          <a
            href="/"
            class="bg-dark text-white px-8 py-4 rounded-md font-semibold hover:bg-black transition uppercase tracking-wide text-sm"
          >
            Back to Home
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-[rgb(29,29,29)]">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold text-white mb-8 uppercase tracking-tight">Ready to Upgrade Your Equipment?</h2>
        <p class="text-xl text-gray-300 mb-8">Browse our complete catalog and find the perfect match for your excavator</p>
        <div class="flex justify-center gap-4 mb-12">
          <a href="/products" class="bg-primary text-black px-8 py-4 rounded-md font-semibold hover:bg-yellow-500 transition uppercase tracking-wide text-sm">
            View Products
          </a>
          <a href="/contact" class="bg-dark text-white px-8 py-4 rounded-md font-semibold hover:bg-black transition uppercase tracking-wide text-sm">
            Contact Sales
          </a>
        </div>
        <p class="text-3xl font-medium text-white">
          <span class="text-primary font-bold">Digmore</span>, Build More!
        </p>
      </div>
    </section>
  </main>
</Layout> 