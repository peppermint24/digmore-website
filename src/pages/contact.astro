---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Digmore">
  <main>
    <!-- Hero Banner -->
    <section class="bg-[rgb(29,29,29)] text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold text-center mb-4 uppercase tracking-tight">Contact Us</h1>
        <p class="text-xl text-center max-w-2xl mx-auto">Get in touch with our team for inquiries and support</p>
      </div>
    </section>

    <section id="contact" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
          <form 
            action="https://formsubmit.co/info.digmore@gmail.com"
            method="POST"
            class="bg-white p-8 rounded-lg shadow-lg"
          >
            <!-- Honeypot -->
            <input type="text" name="_honey" style="display:none">
            <!-- Disable Captcha -->
            <input type="hidden" name="_captcha" value="false">
            <!-- Success Page -->
            <input type="hidden" name="_next" value="https://peppermint24.github.io/digmore-website/thank-you">
            
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium mb-2">Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Your name"
              />
            </div>
            
            <div class="mb-6">
              <label for="phone" class="block text-gray-700 font-medium mb-2">Phone Number *</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                pattern="[0-9]{10}"
                minlength="10"
                maxlength="10"
                title="Please enter a 10-digit phone number (numbers only)"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter 10-digit phone number"
              />
            </div>

            <div class="mb-6">
              <label for="email" class="block text-gray-700 font-medium mb-2">Email (Optional)</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Your email address"
              />
            </div>

            <div class="mb-6">
              <label for="message" class="block text-gray-700 font-medium mb-2">Message *</label>
              <textarea
                id="message"
                name="message"
                required
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Your message"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary text-black font-semibold py-4 px-8 rounded-md hover:bg-yellow-500 transition duration-300 uppercase tracking-wide"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-[rgb(29,29,29)]">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold text-white mb-8 uppercase tracking-tight">Ready to Upgrade Your Equipment?</h2>
        <p class="text-xl text-gray-300 mb-8">Browse our complete catalog and find the perfect match for your excavator</p>
        <div class="flex justify-center gap-4 mb-12">
          <a href="/digmore-website/products" class="bg-primary text-black px-8 py-4 rounded-md font-semibold hover:bg-yellow-500 transition uppercase tracking-wide text-sm">
            View Products
          </a>
          <a href="/digmore-website/#contact" class="bg-dark text-white px-8 py-4 rounded-md font-semibold hover:bg-black transition uppercase tracking-wide text-sm">
            Contact Sales
          </a>
        </div>
        <p class="text-3xl font-medium text-white">
          <span class="text-primary font-bold">Digmore</span>, Build More!
        </p>
      </div>
    </section>
  </main>
</Layout> 